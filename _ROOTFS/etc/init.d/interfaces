start() {
    for t in veth macvlan ipvlan; do
        echo $t
        ip -o -N link show up type $t
    done


/sbin/ip -j link show up  | /usr/bin/jq -r -j '.[] | select(.link_type == "ether") | .ifname + " "' > /.ifaces
